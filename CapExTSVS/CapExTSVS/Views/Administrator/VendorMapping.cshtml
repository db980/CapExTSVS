<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <!-- <h1 class="m-0">Create /Request Indent</h1> -->
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active"> Vender Mapping</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">View Vender Mapping</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/Administrator/VendorMappingData" method="post" class="form-horizontal">
                    <div class="card-body">

                        <div class="form-group row">
                            <div class="col-md-6">
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Vendor Code  </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" value="@(Model != null ? Model.VendorCode : "") " name="VendorCode">

                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">EMP Name </label>
                                <div class="col-sm-10">



                                    <select Value="@Model?.CompanyCode" name="CompanyCode" class="form-control dropdown" placeholder="Enter Company Value" onchange="Dropdownchange(this.value)">
                                        
                                        @foreach (var da in ViewData["com"] as IList<CapexSelddlResult>)
                                        {
                                            <option Value="@da.CODE">@da.DES</option>

                                        }

                                    </select>


                                   @* <input type="text" class="form-control" value="@(Model != null ? Model.FirmName : "") " name="FirmName" required>*@

                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-6">
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Firm Name  </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" value="@(Model != null ? Model.FirmName : "") " name="FirmName">

                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">Contact No </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" value="@(Model != null ? Model.ContactPersonContactNumber : "") " name="ContactPersonContactNumber" required>

                                </div>
                            </div>
                        </div>



                        <div class="form-group row">
                            <div class="col-md-6">
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Address  </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" value="@(Model != null ? Model.Address : "") " name="Address">

                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">Email Id </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" value="@(Model != null ? Model.FirmEmailAddress: "") " name="FirmEmailAddress" required>

                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-6">
                                <label for="inputEmail3" class="col-sm-2 col-form-label">City  </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" value="@(Model != null ? Model.City : "") " name="City">

                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">District </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" value="@(Model != null ? Model.District : "") " name="District" required>

                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-6">
                                <label for="inputEmail3" class="col-sm-2 col-form-label">State  </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" value="@(Model != null ? Model.State : "") " name="State">

                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">Pincode </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" value="@(Model != null ? Model.PinCode : "") " name="PinCode" required>

                                </div>
                            </div>
                        </div>


                        <div class="form-group row">
                            <div class="col-md-6">
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Person Name   </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" value="@(Model != null ? Model.ContactPersonName : "") " name="ContactPersonName">

                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">Person Con.Number </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" value="@(Model != null ? Model.ContactPersonContactNumber : "") " name="ContactPersonContactNumber" required>

                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-6">
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Person email Address   </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" value="@(Model != null ? Model.ContactPersonEmailAddress : "") " name="ContactPersonEmailAddress">

                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">GST </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="Gst" value="@(Model != null ? Model.Gst : "") " required>

                                </div>
                            </div>
                        </div>


                        <div class="form-group row">
                            <div class="col-md-6">
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Remarks   </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" value="@(Model != null ? Model.Remarks : "") " name="CapexType">

                                </div>
                            </div>

                        </div>
                        <br />
                        <!-- /.card-body -->
                        <div class="card-footer">
                            @if (ViewBag.flag==0)
                            {
                                <button type="submit" class="btn btn-info">Submit</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-info">Update</button>
                            }
                            <button type="submit" class="btn btn-default float-right">Cancel</button>
                        </div>
                        <!-- /.card-footer -->
                </form>
            </div>
        </div><!-- /.container-fluid -->
    </section>



    <!-- Table Forms -->

    <br />
    <section class="content">
        <div class="container-fluid">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title"> View User Rights</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/INDENT/CreateIndent" method="post" class="form-horizontal">
                    <div class="card-body">


                        <table id="exampla" class="table  table-bordered table-striped table-responsive">
                            <thead>

                                <tr>
                                    <th>Action</th>
                                    <th>ID</th>
                                    <th>Vendor Code</th>
                                    <th>Comapny Code</th>
                                    <th>Firm Name</th>
                                    <th>Contact No</th>

                                    <th>Email Id</th>
                                    <th>City</th>


                                </tr>

                            </thead>
                            <tbody>




                                @foreach (var data in ViewData["GridData"] as IList<UspCapexSelVendorMasterResult>)
                                {

                                    <tr>

                                        <td>
                                            <button class="badge bg-success btn btn-sm" name="3594"><a class="fa fa-edit" href="/Administrator/Edit/@data.Id"></a></button><br>
                                            <button disabled="" class="badge bg-danger btn btn-sm" name="3594"><a class="fa fa-trash"></a></button><br >
                                            <button disabled=""  class="badge bg-info btn btn-sm" name="3594"><a target="_self" class="fa fa-file" href="/viewPo/3594"></a></button>
                                        </td>
                                        <td>@data.Id</td>
                                        <td>@data.Vendor_Code</td>
                                        <td>@data.CompanyCode</td>
                                        <td>@data.Firm_Name</td>
                                        <td>@data.Firm_Contact_Number</td>

                                        <td>@data.Firm_Email_Address</td>
                                        <td>@data.City</td>






                                    </tr>
                                }

                            </tbody>

                        </table>

                    </div>
                    <!-- /.card-body -->
                    <!-- /.card-footer -->
                </form>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- End Table Forms -->
    <!-- /.content -->
</div>

